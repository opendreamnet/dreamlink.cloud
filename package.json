{
  "name": "@opendreamnet/dreamlink-cloud",
  "displayName": "DreamLink",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint": "yarn lint:js",
    "test:e2e": "wdio wdio.conf.js",
    "deploy": "deploy dist -c -p pinata -p dreamlink-cluster -d cloudflare -n www-dreamlink",
    "release": "yarn dlx standard-version && git push --follow-tags"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "path": ".",
    "tag-prefix": "dreamlink-v",
    "releaseCommitMessageFormat": "chore(release): dreamlink@{{currentTag}}"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@innologica/vue-dropdown-menu": "^0.1.4",
    "@nuxt/content": "^1.14.0",
    "@nuxtjs/fontawesome": "^1.1.2",
    "@nuxtjs/gtm": "^2.4.0",
    "@nuxtjs/markdownit": "^2.0.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@opendreamnet/ipfs": "^1.0.1",
    "@sweetalert2/theme-dark": "^5.0.0",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "axios": "^0.21.1",
    "clipboard": "^2.0.8",
    "core-js": "^3.13.1",
    "dialog-polyfill": "^0.5.6",
    "is-ipfs": "^5.0.0",
    "lodash": "^4.17.21",
    "nuxt": "^2.15.3",
    "pretty-bytes": "^5.6.0",
    "sweetalert2": "^11.0.16",
    "tippy.js": "^6.3.1",
    "urijs": "^1.19.6"
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.2",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@dreamnet/deploy-cli": "^1.2.2",
    "@dreamnet/eslint-config-dreamnet-nuxtjs": "^1.3.0",
    "@nuxt/image": "^0.4.14",
    "@nuxt/types": "^2.15.3",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/google-fonts": "^1.3.0",
    "@nuxtjs/style-resources": "^1.1.0",
    "@nuxtjs/tailwindcss": "^4.0.1",
    "@opendreamnet/nuxtjs-base": "^1.0.2",
    "@types/urijs": "^1.19.15",
    "@wdio/cli": "^7.2.1",
    "@wdio/local-runner": "^7.2.1",
    "@wdio/mocha-framework": "^7.2.1",
    "@wdio/spec-reporter": "^7.2.1",
    "@wdio/sync": "^7.7.3",
    "babel-eslint": "^10.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^7.22.0",
    "eslint-plugin-lodash": "^7.2.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-vue": "^7.7.0",
    "eslint-plugin-wdio": "^7.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "sass": "^1.34.1",
    "webdriverio": "^7.2.1"
  }
}
